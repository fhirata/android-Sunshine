<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/list_item_extra_padding"
    android:paddingRight="@dimen/list_item_extra_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_gravity="fill"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/detail_icon"
                android:layout_width="@dimen/widget_icon"
                android:layout_gravity="center"
                android:layout_height="@dimen/widget_icon"
                android:minHeight="@dimen/widget_icon"
                android:minWidth="@dimen/widget_icon"
                tools:src="@drawable/art_clear" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_date_textview"
                android:layout_width="match_parent"
                android:layout_gravity="fill_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primary_text"
                tools:text="Today, March 27th"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/detail_forecast_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/secondary_text"
                android:layout_gravity="fill_vertical"
                android:gravity="center_vertical"
                tools:text="Clear" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/detail_high_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="fill"
                android:layout_marginEnd="@dimen/forecast_temperature_space"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="97" />

            <TextView
                android:id="@+id/detail_low_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="fill"
                android:fontFamily="sans-serif-light"
                android:layout_marginEnd="@dimen/forecast_temperature_space"
                android:gravity="center"
                android:textColor="@color/forecast_low_text"
                android:textAppearance="?android:textAppearanceSmall"
                tools:text="54" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
